---
import { Picture } from "astro-imagetools/components";
import contactUsJson from "@data/contact-us.json";
---

<section
  class="container flex flex-wrap text-white space-y-8 py-4 md:space-y-0 lg:py-8"
>
  <!-- Logo -->
  <div class="self-start pt-4 w-2/5 md:w-1/5">
    <Picture src="/images/logo.png" alt="logo" />
  </div>

  <!-- Center -->
  <ul class="space-y-2 w-full mx-auto md:pl-4 md:w-3/5 lg:pl-0">
    <li>Manager Liao: {contactUsJson.liao}</li>
    <li>Manager Zhang: {contactUsJson.zhang}</li>
    <li>Email: {contactUsJson.email}</li>
    <li>Address: {contactUsJson.address}</li>
  </ul>

  <!-- QR Code -->
  <div class="h-28 w-28 self-end mt-8 md:mt-0">
    <Picture src="/images/qr-code.png" alt="logo" />
  </div>
</section>
